<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblNombreTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#EBFFE0"
        android:text="Título:"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="24dp" />

    <TextView
        android:id="@+id/lblDescTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#EBFFE0"
        android:text="Descripción:"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtImpTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Importancia de la Tarea"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="293dp" />

    <TextView
        android:id="@+id/lblCostoTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#EBFFE0"
        android:text="Costo:"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="332dp" />

    <TextView
        android:id="@+id/txtCostoTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Costo de la Tarea"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="351dp" />

    <TextView
        android:id="@+id/txtDescTarea"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Descripción de la Tarea"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/lblFechaTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#EBFFE0"
        android:text="Fecha:"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/txtFechaTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Fecha de la Tarea"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="235dp" />

    <TextView
        android:id="@+id/lblImpTarea"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="#EBFFE0"
        android:text="Importancia:"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="274dp" />

    <TextView
        android:id="@+id/txtNombreTarea"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Nombre de la Tarea"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="43dp" />

    <Switch
        android:id="@+id/swichtHecha"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:text="Hecha"
        android:textColor="#3A3A3A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAtras"
        app:layout_constraintTop_toBottomOf="@+id/txtCostoTarea"
        app:layout_constraintVertical_bias="0.888" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="setBtnAtras"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/swichtHecha"
        app:layout_constraintTop_toBottomOf="@+id/txtCostoTarea"
        app:layout_constraintVertical_bias="0.906"
        app:srcCompat="@mipmap/edit" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="setBtnAtras"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/swichtHecha"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCostoTarea"
        app:layout_constraintVertical_bias="0.906"
        app:srcCompat="@mipmap/previous2" />

    <ImageButton
        android:id="@+id/btnBorrar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#FFFFFF"
        android:onClick="ventanaConfirmar"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@+id/txtCostoTarea"
        app:layout_constraintVertical_bias="0.906"
        app:srcCompat="@mipmap/trashbin" />

</androidx.constraintlayout.widget.ConstraintLayout>